<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.padual.com/java/logback.xsd">
	<property name="logDir" value="E:" />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<!-- <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"> 
			<pattern>%date{yyyyMMdd HH:mm:ss.SSS} [%thread] %-5level %logger{0}:%line 
			- %msg%n</pattern> </encoder> -->
		<encoder>
			<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
				by default -->
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>


	<appender name="appLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logDir}/appLog.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logDir}/appLog.log.%d{yyyy-MM-dd}</fileNamePattern>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%date{yyyyMMdd HH:mm:ss.SSS} [%thread] %-5level %X{invokeNo} %logger{0}:%line - %msg%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
		</filter>
	</appender>

	<logger name="log.logback" level="info" additivity="false">
		<appender-ref ref="appLog" />
	</logger>

	<root level="info">
		<appender-ref ref="appLog" />
		<appender-ref ref="console" />
	</root>
</configuration>
